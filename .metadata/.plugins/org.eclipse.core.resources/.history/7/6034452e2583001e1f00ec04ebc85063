package com.skillstorm.assignment;

import java.math.BigDecimal;
import java.util.Scanner;

public class BudgetCalc {
	
	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		System.out.println("Hello and welcome to your Budget Calculator!");
		System.out.println("Let's get started! How much do you make each month?");
		BigDecimal income = scanner.nextBigDecimal();
		scanner.nextLine(); // Clearing buffer
		
		System.out.println("Now let's switch gears to your expenses.");
		System.out.println("How much is your monthly rent or mortgage?");
		BigDecimal housing = scanner.nextBigDecimal();
		scanner.nextLine(); // Clearing buffer
		
		System.out.println("What are your combined monthly utility costs?");
		BigDecimal utilities = scanner.nextBigDecimal();
		scanner.nextLine(); // Clearing buffer
		
		System.out.println("How much is your combined car payment and insurance?");
		BigDecimal transport = scanner.nextBigDecimal();
		scanner.nextLine(); // Clearing buffer
		
		BigDecimal savings = income - housing - utilities - transport;
		
		if(savings <= 0) {
			System.out.println("Oh no, you're in the negative! Time for some budget cuts! You are at a net loss of " + savings + "!");
		}else {
			System.out.println("Congratulations! You're saving " + savings + " this month!");
		}
		
		
		
	}

}
